# ===== Frontend API settings (app/) =====
# Shared secret for local JWT validation when AUTH_API_URL is not configured.
JWT_SECRET=changeme
# Port used by the FastAPI app defined in app/main.py.
APP_PORT=8001
# Public base URL used to build CORS origins.
PUBLIC_BASE_URL=http://localhost:8001
# Optional external authorization endpoint (leave empty to disable).
AUTH_API_URL=
# Request timeout (seconds) for the external authorization API.
AUTH_API_TIMEOUT=3.0
# Service identifier passed to the external authorization API (optional).
AUTH_SERVICE_NAME=n2o-container-guard

# ===== Backend service settings (backend/) =====
# Authorization mode for backend.app (none|token).
AUTH_MODE=token
# Token clients must provide via X-Auth-Token header when AUTH_MODE=token.
GUARD_TOKEN=supersecret-token
# Async SQLAlchemy database URL (PostgreSQL DSN in production, sqlite for tests).
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/guard
# Path to the YAML policy configuration file.
POLICIES_PATH=policies.yml

# ===== Jira integration =====
# Base URL of the Jira REST API (required to create issues).
JIRA_URL=https://jira.example.com
# Jira account used for API calls.
JIRA_USER=jira-user@example.com
# Jira API token for the user above.
JIRA_API_TOKEN=your-api-token
# Key of the project where issues should be created.
JIRA_PROJECT_KEY=SEC
# Base browse URL used to build issue links (must be set even when using the dummy client).
JIRA_BROWSE_URL=https://jira.example.com
