# ===== Настройки FastAPI сервиса =====
# Порт, который слушает приложение; используется и Gunicorn, и docker-compose.
APP_PORT=8001
# Публичный базовый URL, применяемый для CORS и генерации ссылок.
PUBLIC_BASE_URL=http://localhost:8001
# Внешний эндпоинт авторизации (оставьте пустым, если не нужен).
AUTH_API_URL=
# Тайм-аут запросов к внешнему API авторизации (в секундах).
AUTH_API_TIMEOUT=3.0
# Идентификатор сервиса для внешнего API авторизации (опционально).
AUTH_SERVICE_NAME=n2o-container-guard

# ===== Настройки бэкенда =====
# Режим авторизации Guard API (none|token).
AUTH_MODE=token
# Токен, который клиенты передают в заголовке X-Auth-Token.
GUARD_TOKEN=supersecret-token
# Строка подключения к PostgreSQL (используется SQLAlchemy/asyncpg).
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/guard
# Путь до YAML с политиками анализа.
POLICIES_PATH=policies.yml
POLICIES_STORAGE_PATH=backend/policies_storage

# ===== Интеграция с Jira =====
# Базовый URL Jira (используется и для REST API, и для построения ссылок).
JIRA_URL=https://jira.example.com
# Пользователь Jira, от имени которого выполняются запросы.
JIRA_USER=jira-user@example.com
# API токен указанного пользователя.
JIRA_API_TOKEN=your-api-token
# Ключ проекта, в котором создаются задачи.
JIRA_PROJECT_KEY=SEC

# ===== Confluence integration =====
CONFLUENCE_URL=https://confluence.example.com/wiki
CONFLUENCE_USER=confluence-user@example.com
CONFLUENCE_API_TOKEN=your-api-token
CONFLUENCE_SPACE_KEY=SEC
CONFLUENCE_PARENT_PAGE_ID=491522
